<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_news_margin_top">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_news_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_news_margin_start"
            android:layout_marginEnd="@dimen/item_news_margin_end"
            android:background="@drawable/shape_news_background"
            android:clipChildren="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/item_news_widgets_margin"
                android:layout_marginTop="@dimen/item_news_widgets_margin"
                android:layout_marginEnd="@dimen/title_horizontal_margin"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/main_text_size"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="how about 3D modeling dsa dsa sdas dsad asd ?" />

        <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/item_news_widgets_margin"
                android:layout_marginTop="@dimen/item_news_margin_top"
                android:layout_marginEnd="@dimen/title_horizontal_margin"
                android:ellipsize="end"
                android:lines="2"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                tools:text="how about 3D modeling dsa dsa sdas dsad asd ?" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>